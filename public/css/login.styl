html
body
	padding 0
	margin 0
	width 100%
	font-size 11px
	font-family: 'Helvetica',sans-serif;
#login_form
	width 400px
	margin 0px auto
	margin-top 100px
	border 1px solid #eee

	#title
		font-size: 22px
		font-weight bold
		color #525252
		margin 10px 40px 15px
		border-bottom 1px solid #dcdcdc

	#form
		ul
			list-style-type none

			li
				margin-right 63px
				input
					border 1px solid #eee
					width 100%
					padding 0 10px
					height 30px
					margin-bottom 10px

		.field
			border 1px solid #eee
			width 100%
			input
				width 100%
				border none
				padding-left 10px
				padding-right 10px

	#action
		margin 0 40px
		padding-top 20px
		height 50px
		border-top 1px solid #dcdcdc

		.button
			float right
			input
				width 100px
				height 30px
		.text
			float left

			a
				text-decoration none
				font-size 13px