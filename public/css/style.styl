html
body
	padding 0
	margin 0
	height 100%
	min-width 800px
	font-size 12px
	font-family Arial, sans-serif
#container
	position relative
	height auto !important
	height 100%
	min-height 100%

.left 
	float left
.right
	float right
.clear
	clear both

#header
	height 25px
	border-bottom 1px solid #000
	background-color #373737

	ul
		list-style-type none
		padding 0px
		margin 0px
		
		li
			float left
			padding-right 20px
			padding-top 5px
			a
				text-decoration none
				color #fff
				font-weight bold
			a:hover
				color #acde84

			.first
				padding-left 10px

#content
	height 100%
	padding 0em 0em 500px
	width 100%
	#top_content
		padding-left 1em
		padding-right 1em
		height 70px
		border-bottom 1px solid #dcdcdc

		.logo
			float left
			padding-top 15px

		#search_form
			padding-top 15px

			#txt_keyword
				padding-left 10px
				padding-right 10px
				margin-left 20px
				width 350px
				height 25px
				margin-top 5px
				border 1px solid #eee

			#btn_search
				background-color #eee
				border 1px solid #dcdcdc
				margin-left 10px
				height 29px
				width 100px
				cursor pointer
				font-weight bold
				color #0c0c0c
				-webkit-border-radius: 5px;
				-moz-border-radius: 5px;
				border-radius: 5px;
			#btn_search:hover
				background-color #f4f4f4


	#main_content
		padding-left 10px
		padding-right 10px

	#loading
		margin-top 20px
		text-align center

#footer
	position absolute
	width 100%
	bottom 0
	line-height 20px
	height 20px
	border-top 1px solid #eee

	.copyright
		padding-left 10px
		padding-right 10px
		float right

#notice
	position fixed
	width 100%
	top 0px
	height 100px
	
	#message
		width 300px
		height 200px
		margin 0px auto
		background-color #eee