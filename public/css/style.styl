html
body
	padding 0
	margin 0
	height 100%
	min-width 800px
	font-size 11px
	font-family Arial, sans-serif
#container
	position relative
	height auto !important
	height 100%
	min-height 100%

.left 
	float left
.right
	float right
.clear
	clear both

#header
	height 25px
	border-bottom 1px solid #000
	background-color #373737

	ul
		list-style-type none
		padding 0px
		margin 0px
		
		li
			float left
			padding-right 20px
			padding-top 5px
			a
				text-decoration none
				color #fff
				font-weight bold
			a:hover
				color #acde84

			.first
				padding-left 10px

#content
	height 100%
	padding 0em 0em 500px

	#top_content
		padding-left 1em
		padding-right 1em
		height 70px
		border-bottom 1px solid #dcdcdc

		.logo
			float left
			padding-top 15px

		#search_form
			padding-top 15px

			.txt_keyword
				padding-left 10px
				padding-right 10px
				margin-left 20px
				width 350px
				height 25px
				margin-top 5px
				border 1px solid #eee

			.btn_search
				background-color #eee
				border 1px solid #dcdcdc
				margin-left 10px
				height 30px
				width 100px
				font-weight bold
				color #0c0c0c
#footer
	position absolute
	width 100%
	bottom 0
	border-top 1px solid #eee